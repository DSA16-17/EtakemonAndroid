<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="dsa.eetac.upc.edu.etakemon.Detalle">

    <TextView
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="36dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/health1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="PUNTOS DE VIDA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue">
    </TextView>

    <TextView
        android:text="TIPO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue">
    </TextView>
    <TextView
        android:text="NOMBRE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/id1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue">
    </TextView>

    <TextView
        android:text="DESCRIPCIÃ“N:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/description1"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue">
    </TextView>

    <TextView
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4">
    </TextView>

    <TextView
        android:id="@+id/name1"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="12dp">
    </TextView>

    <TextView
        android:id="@+id/description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/name1"
        android:layout_toEndOf="@+id/textView5">
    </TextView>

    <TextView
        android:id="@+id/type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="12dp">
    </TextView>

    <TextView
        android:id="@+id/health1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="12dp">
    </TextView>

</RelativeLayout>
